@model IEnumerable<NewSPCA.Models.Site>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Site_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Site_Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PostalCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Province)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Site_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Site_Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Province)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SiteID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SiteID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SiteID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
