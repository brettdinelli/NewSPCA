@model IEnumerable<NewSPCA.Models.Animal>
@{
    ViewData["Title"] = "Adoptable Dogs";
    //ViewData["Title"] = "Adoptable Animals";
}

<div class="container marginBottom">
    <h2>Adoptable @ViewData["SpeciesType"]s</h2>
    @*<h2>Adoptable Animals</h2>*@

    @if(Model.Count() == 0)
    { 
    <div class="alert alert-info">
        There are no adoptable @ViewData["SpeciesType"]s. Please check back soon.
    </div>
    }
    else
    {
        <div class="row">
            @foreach(var item in Model)
            {
                <div class="col-md-4">
                    <h3 class="bg-primary text-center">@item.Name</h3>
                    <div style="border:1px solid; padding:.2em">
                        <p>Species: @Html.DisplayFor(m => item.Species.Species_Name)</p>
                        <p>Age: @Html.DisplayFor(m => item.Age)</p>
                        <p>Gender: @Html.DisplayFor(m => item.Gender)</p>
                        <p>Breed: @Html.DisplayFor(m => item.Breed.Breed_Name)</p>
                        <p>Size: @Html.DisplayFor(m => item.Size)</p>
                        <p>Color: @Html.DisplayFor(m => item.Color)</p>
                        <p>Intake Date: @Html.DisplayFor(m => item.Intake_Date)</p>
                        <p>Price: @Html.DisplayFor(m => item.Price)</p>
                        <p>Declawed: @Html.DisplayFor(m => item.Declawed)</p>
                        <p>Housetrained: @Html.DisplayFor(m => item.Housebroken)</p>
                        <p>Spayed/Neutered: @Html.DisplayFor(m => item.Spayed_Neutered)</p>
                        <p>Site: @Html.DisplayFor(m => item.Site.Site_Name)</p>
                    </div>
                </div>

            }
        </div>

    }

</div>



