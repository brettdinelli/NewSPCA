@model IEnumerable<NewSPCA.Models.Animal>

<div class="container marginBottom">
@{
    ViewData["Title"] = "Index";
}

<h2>Animals</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Gender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Size)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Color)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Intake_Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Declawed)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Housebroken)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Spayed_Neutered)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Breed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Site)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Species)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Intake_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Declawed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Housebroken)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Spayed_Neutered)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Breed.Breed_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Site.Site_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Species.Species_Name)
            </td>
            <td>
                <a class="ico-success" title="Edit Animal" asp-action="Edit" asp-route-id="@item.ID"><i class="fas fa-edit"></i></a>
                <a class="ico-info" title="Animal Details" asp-action="Details" asp-route-id="@item.ID"><i class="fas fa-search-plus"></i></a> 
                <a class="ico-danger" title = "Delete Animal" asp-action="Delete" asp-route-id="@item.ID"><i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
    </div>