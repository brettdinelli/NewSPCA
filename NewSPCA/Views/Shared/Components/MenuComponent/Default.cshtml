
@model IEnumerable<NewSPCA.Models.Species>

<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Adoptable Animals <span class="caret"></span></a>
    <ul class="dropdown-menu">
        @foreach (var item in Model)
        {
            <li><a asp-controller="Animal" asp-action="Listing" asp-route-speciesId="@item.SpeciesID">@item.Species_Name</a></li>
        }
        <li><a asp-controller="Animal" asp-action="Listing" asp-route-speciesId="@null">All Animals</a></li>
    </ul>
</li>